<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:background="@drawable/background">

    <Button
        android:id="@+id/help"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_alignLeft="@+id/rank"
        android:layout_below="@+id/rank"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_normal_help"
        android:onClick="help_btn" />

    <Button
        android:id="@+id/start"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:background="@drawable/btn_normal_start"
        android:onClick="start_btn" />

    <Button
        android:id="@+id/setting"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_alignLeft="@+id/start"
        android:layout_below="@+id/start"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_normal_setting"
        android:onClick="setting_btn" />

    <Button
        android:id="@+id/rank"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_alignLeft="@+id/setting"
        android:layout_below="@+id/setting"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_normal_rank"
        android:onClick="rank_btn" />

</RelativeLayout>
